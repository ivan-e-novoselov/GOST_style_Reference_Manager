<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl"
       class="in-text"
       version="1.0"
       default-locale="ru-RU"
       demote-non-dropping-particle="sort-only">

  <info>
    <title>GOST R 7.0.5-2008 (Numeric, RU/EN, custom) — Ivan Novoselov</title>
    <id>http://www.zotero.org/styles/gost-r-7-0-5-2008-numeric-ivan-novoselov-custom-v3</id>
    <author>
      <name>Ivan Novoselov</name>
    </author>
    <category citation-format="numeric"/>
    <category field="generic-base"/>
    <updated>2024-08-04T00:00:00+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>

  <locale>
    <terms>
      <term name="page-range-delimiter">-</term>
      <term name="issue" form="symbol">№</term>
    </terms>
  </locale>

  <locale xml:lang="ru">
    <terms>
      <term name="et-al">и др.</term>
      <term name="accessed">дата обращения</term>
    </terms>
  </locale>

  <locale xml:lang="en">
    <terms>
      <term name="et-al">et al.</term>
      <term name="accessed">date accessed</term>
    </terms>
  </locale>

  <macro name="is-ru">
    <choose>
      <if variable="language" match="any" value="ru">
        <text value="1"/>
      </if>
      <else-if variable="language" match="any" value="ru-RU">
        <text value="1"/>
      </else-if>
    </choose>
  </macro>

  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="doi">
    <choose>
      <if variable="DOI">
        <text variable="DOI" prefix="https://doi.org/"/>
      </if>
    </choose>
  </macro>

  <macro name="first-author-surname-initials">
    <names variable="author">
      <name name-as-sort-order="first"
            sort-separator=", "
            initialize-with="."
            delimiter=", "
            delimiter-precedes-last="always"/>
      <substitute>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="authors-after-slash">
    <names variable="author">
      <name name-as-sort-order="none"
            sort-separator=" "
            initialize-with="."
            delimiter=", "
            delimiter-precedes-last="always"
            et-al-min="5"
            et-al-use-first="3"/>
      <et-al prefix=" [" suffix="]" term="et-al"/>
      <substitute>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="pages-labeled">
    <choose>
      <if variable="page">
        <choose>
          <if variable="language" match="any" value="ru">
            <text value="С. "/>
          </if>
          <else-if variable="language" match="any" value="ru-RU">
            <text value="С. "/>
          </else-if>
          <else>
            <text value="P. "/>
          </else>
        </choose>
        <text variable="page"/>
      </if>
      <else-if variable="number">
        <choose>
          <if variable="language" match="any" value="ru">
            <text value="С. "/>
          </if>
          <else-if variable="language" match="any" value="ru-RU">
            <text value="С. "/>
          </else-if>
          <else>
            <text value="P. "/>
          </else>
        </choose>
        <text variable="number"/>
      </else-if>
    </choose>
  </macro>

  <macro name="vol-labeled">
    <choose>
      <if variable="volume">
        <choose>
          <if variable="language" match="any" value="ru">
            <text value="Т. "/>
          </if>
          <else-if variable="language" match="any" value="ru-RU">
            <text value="Т. "/>
          </else-if>
          <else>
            <text value="Vol. "/>
          </else>
        </choose>
        <text variable="volume"/>
      </if>
    </choose>
  </macro>

  <macro name="issue-labeled">
    <choose>
      <if variable="issue">
        <choose>
          <if variable="language" match="any" value="ru">
            <text value="№ "/>
          </if>
          <else-if variable="language" match="any" value="ru-RU">
            <text value="№ "/>
          </else-if>
          <else>
            <text value="No. "/>
          </else>
        </choose>
        <text variable="issue"/>
      </if>
    </choose>
  </macro>

  <macro name="publisher-block">
    <group delimiter=" : ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <macro name="total-pages">
    <choose>
      <if variable="number-of-pages">
        <text variable="number-of-pages"/>
        <choose>
          <if variable="language" match="any" value="ru">
            <text value=" с."/>
          </if>
          <else-if variable="language" match="any" value="ru-RU">
            <text value=" с."/>
          </else-if>
          <else>
            <text value=" p."/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>

  <macro name="web-access">
    <choose>
      <if variable="URL">
        <choose>
          <if variable="language" match="any" value="ru">
            <text variable="URL" prefix="Режим доступа: "/>
            <choose>
              <if variable="accessed">
                <group prefix=" (" suffix=")">
                  <text term="accessed" suffix=": "/>
                  <date variable="accessed">
                    <date-part name="day" form="numeric-leading-zeros" suffix="."/>
                    <date-part name="month" form="numeric-leading-zeros" suffix="."/>
                    <date-part name="year"/>
                  </date>
                </group>
              </if>
            </choose>
          </if>
          <else-if variable="language" match="any" value="ru-RU">
            <text variable="URL" prefix="Режим доступа: "/>
            <choose>
              <if variable="accessed">
                <group prefix=" (" suffix=")">
                  <text term="accessed" suffix=": "/>
                  <date variable="accessed">
                    <date-part name="day" form="numeric-leading-zeros" suffix="."/>
                    <date-part name="month" form="numeric-leading-zeros" suffix="."/>
                    <date-part name="year"/>
                  </date>
                </group>
              </if>
            </choose>
          </else-if>
          <else>
            <text variable="URL" prefix="URL: "/>
            <choose>
              <if variable="accessed">
                <group prefix=" (" suffix=")">
                  <text term="accessed" suffix=": "/>
                  <date variable="accessed">
                    <date-part name="day" form="numeric-leading-zeros" suffix="."/>
                    <date-part name="month" form="numeric-leading-zeros" suffix="."/>
                    <date-part name="year"/>
                  </date>
                </group>
              </if>
            </choose>
          </else>
        </choose>
      </if>
    </choose>
  </macro>

  <citation collapse="none">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
      <choose>
        <if variable="locator">
          <group prefix=", " delimiter=" ">
            <choose>
              <if variable="language" match="any" value="ru">
                <text value="с."/>
              </if>
              <else-if variable="language" match="any" value="ru-RU">
                <text value="с."/>
              </else-if>
              <else>
                <text value="p."/>
              </else>
            </choose>
            <text variable="locator"/>
          </group>
        </if>
      </choose>
    </layout>
  </citation>

  <bibliography entry-spacing="0" second-field-align="flush" et-al-min="5" et-al-use-first="3">
    <layout suffix=".">
      <text variable="citation-number" suffix=". "/>

      <choose>

        <if type="article-journal" match="any">
          <group delimiter=". ">
            <group>
              <text macro="first-author-surname-initials" suffix=". "/>
              <text variable="title"/>
              <text macro="authors-after-slash" prefix=" / "/>
              <text variable="container-title" prefix=" // "/>
            </group>

            <group delimiter=" – ">
              <text macro="year"/>
              <text macro="vol-labeled"/>
              <text macro="issue-labeled"/>
              <text macro="pages-labeled"/>
            </group>

            <text macro="doi"/>
          </group>
        </if>

        <else-if type="paper-conference" match="any">
          <group delimiter=". ">
            <group>
              <text macro="first-author-surname-initials" suffix=". "/>
              <text variable="title"/>
              <text macro="authors-after-slash" prefix=" / "/>
              <text variable="container-title" prefix=" // "/>
            </group>

            <group delimiter=" – ">
              <text macro="year"/>
              <text macro="vol-labeled"/>
              <text macro="issue-labeled"/>
              <text macro="pages-labeled"/>
            </group>

            <text macro="doi"/>
          </group>
        </else-if>

        <else-if type="book" match="any">
          <group delimiter=" – ">
            <group>
              <text macro="first-author-surname-initials" suffix=". "/>
              <text variable="title"/>
              <text macro="authors-after-slash" prefix=" / "/>
            </group>
            <text macro="publisher-block"/>
            <text macro="year"/>
            <text macro="total-pages"/>
          </group>
        </else-if>

        <else-if type="thesis" match="any">
          <group delimiter=" – ">
            <group>
              <text macro="first-author-surname-initials" suffix=". "/>
              <text variable="title"/>
              <text macro="authors-after-slash" prefix=" / "/>
              <text variable="genre"/>
            </group>
            <text variable="publisher-place"/>
            <text macro="year"/>
          </group>
        </else-if>

        <else-if type="webpage" match="any">
          <group delimiter=". ">
            <text variable="title"/>
            <text macro="authors-after-slash" prefix=" / "/>
            <text macro="web-access"/>
          </group>
        </else-if>

        <else>
          <group delimiter=". ">
            <text macro="first-author-surname-initials" suffix=". "/>
            <text variable="title"/>
            <text macro="authors-after-slash" prefix=" / "/>
            <text variable="container-title"/>
            <text macro="year"/>
          </group>
        </else>

      </choose>
    </layout>
  </bibliography>

</style>
